@model Alumno

<h1>Registrar Notas</h1>

<form asp-action="Registro" method="POST">
    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>  <!-- Mensajes de validaciÃ³n -->

    <div class="mb-2">
        <label for="Nombre" class="form-label">Nombre del alumno</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" required asp-for="Nombre">
    </div>

    <div class="mb-2">
        <label for="Nota1" class="form-label">1er Parcial</label>
        <input type="number" class="form-control" id="Nota1" name="Nota1" required asp-for="Nota1">
    </div>

    <div class="mb-2">
        <label for="Nota2" class="form-label">2do Parcial</label>
        <input type="number" class="form-control" id="Nota2" name="Nota2" required asp-for="Nota2">
    </div>

    <div class="mb-2">
        <label for="Nota3" class="form-label">3er Parcial</label>
        <input type="number" class="form-control" id="Nota3" name="Nota3" required asp-for="Nota3">
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-database-fill-add"></i> Registrar
    </button>
</form>
